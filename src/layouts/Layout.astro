---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Academia The Number One",
  description = "Academia educativa enfocada en la excelencia académica y formación integral.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow" />

  <!-- Canonical -->
  <link rel="canonical" href={Astro.url.href} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url.href} />
  <meta property="og:image" content="https://tno-academy.vercel.app/Logo Academia SF.png" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />

  <!-- SEO Local (MUY IMPORTANTE PARA PERÚ) -->
  <script type="application/ld+json">
  {JSON.stringify({
    "@context": "https://schema.org",
    "@type": "EducationalOrganization",
    "name": "Academia The Number One",
    "url": "https://tno-academy.vercel.app",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Atalaya",
      "addressRegion": "Ucayali",
      "addressCountry": "PE"
    }
  })}
  </script>

  <link rel="icon" href="/icono.ico" />
</head>

<body class="font-sans bg-white text-gray-800 antialiased">

  <!-- Navbar -->
  <Navbar />

  <!-- Contenido -->
  <main class="min-h-screen">
    <slot />
  </main>

  <!-- Footer -->
  <Footer />

</body>
</html>